{
		"source":{
			"host":"http://esfrontline.bugzilla.mozilla.org",
			"port":80,
			"index":"public_bugs",
			"type":"bug_version",
            "explore_metadata":false
		},
		"destination":{
			"host":"http://localhost",
			"port": 9200,
			"index":"bugs",
			"type":"bug_version",
            "schema_file":"./resources/json/bug_version.json"
		},
		"param":{
			"last_replication_time":"./results/data/last_replication_time.txt"
		},
		"debug":{
			"log":[{
				"class": "logging.handlers.RotatingFileHandler",
				"filename": "./results/logs/replication.log",
				"maxBytes": 10000000,
				"backupCount": 200,
				"encoding": "utf8"
			},{
				"log_type": "stream",
				"stream":"sys.stdout"
			}]
	}


}
